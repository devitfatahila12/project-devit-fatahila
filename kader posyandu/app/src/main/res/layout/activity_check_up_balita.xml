                    android:hint="Tgl periksa "
                    android:padding="10dp"
                    android:paddingLeft="12dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="20dp"
                    android:text="(Tanggal Periksa)"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:textStyle="bold | italic" />

            </RelativeLayout>

            <EditText
                android:background="@drawable/rounded_shape"
                android:id="@+id/jenis_kelamin_new_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_baseline_border_color_24"
                android:drawablePadding="12dp"
                android:hint="Pilih Jenis Kelamin"
                android:padding="10dp"
                android:paddingLeft="12dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

            <EditText
                android:background="@drawable/rounded_shape"
                android:id="@+id/alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_baseline_border_color_24"
                android:drawablePadding="12dp"
                android:hint="Alamat"
                android:padding="10dp"
                android:paddingLeft="12dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

            <EditText
                android:background="@drawable/rounded_btnreg"
                android:id="@+id/orang_tua_kandung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_baseline_border_color_24"
                android:drawablePadding="12dp"
                android:hint="Nama Orang Tua"
                android:padding="10dp"
                android:paddingLeft="12dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true">

                <EditText
                    android:id="@+id/umur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rounded_btnreg"
                    android:drawableLeft="@drawable/ic_baseline_border_color_24"
                    android:drawablePadding="12dp"
                    android:hint="Masukkan Umur"
                    android:inputType="phone"
                    android:padding="10dp"
                    android:paddingLeft="12dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:paddingTop="22dp"
                    android:paddingRight="20dp"
                    android:text="(Bulan)"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:textStyle="bold | italic" />

            </RelativeLayout>





